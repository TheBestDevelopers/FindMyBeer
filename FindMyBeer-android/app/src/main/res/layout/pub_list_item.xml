<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:padding="1dip"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/mTextViewStars"
        android:src="@drawable/ic_star" />

    <TextView
        android:id="@+id/mTextViewStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/mTextViewPubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@id/star"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/mTextViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/mTextViewPubName"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        />
    <ImageView
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/mTextViewDistance"
        android:src="@drawable/ic_table" />

    <TextView
        android:id="@+id/mTextViewFreeTables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTextViewDistance"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/table"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        />

</RelativeLayout>
